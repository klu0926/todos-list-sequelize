{{>message}}
<a href="/todos/new" class="btn btn-primary mb-3">Create</a>
<ul class="list-group">
  {{#each todos}}
  <li class="list-group-item">
    <div class="row">
      <div class="col-auto me-auto d-flex align-items-center">
        <div>
          <input class="form-check-input" type="checkbox" name="isDone" {{#if this.isDone }} checked {{/if}} disabled>
          <h4 class="d-inline ms-2 align-middle">
            {{ this.name }}
          </h4>
        </div>
      </div>
      <div class="col-auto">
        <a class="btn btn-warning" href="./todos/{{ this.id }}">detail</a>
        <a class="btn btn-success" href="./todos/{{ this.id }}/edit">edit</a>
        <form action="./todos/{{ this.id }}?_method=DELETE" method="POST" style="display: inline;">
          <button class="btn btn-danger" type="submit">delete</button>
        </form>
      </div>
    </div>
  </li>
  {{/each}}
</ul>